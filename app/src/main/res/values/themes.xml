<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LanMusicSync" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.LanMusicSync.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.LanMusicSync</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.LanMusicSync.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.LanMusicSync.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card styles -->
    <style name="Widget.LanMusicSync.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.LanMusicSync.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.LanMusicSync.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>
</resources>

